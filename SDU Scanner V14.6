        filteredData.forEach(item => {
            let distance = parseFloat(calculateDistance(currentX, currentY, item.x, item.y));
            let coeff = parseFloat(item.coeff);

            if (!isNaN(coeff) && coeff === maxCoeffInRange && distance < minDistanceCoeff) {
